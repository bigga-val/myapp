{% extends 'components/layout/default.html.twig' %}


{% block content %}
<div class="panel">
    <h1>Produit</h1>

    <table class="table table-responsive">
        <tbody>

            <tr>
                <th>Designation</th>
                <td>{{ produit.designation }}</td>
            </tr>
            <tr>
                <th>Fabricant</th>
                <td>{{ produit.fabricant }}</td>
            </tr>
            <tr>
                <th>Preemption</th>
                <td>{{ produit.preemption ? produit.preemption|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="border border-2 p-2 m2 text-white rounded bg-primary" href="{{ path('app_produits_index') }}">Voir la liste</a>

    <a class="border border-2 p-2 m2 text-white rounded bg-primary" href="{{ path('app_produits_edit', {'id': produit.id}) }}">Modifier</a>

    {{ include('produits/_delete_form.html.twig') }}
</div>
{% endblock %}
