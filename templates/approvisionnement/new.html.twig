{% extends 'components/layout/default.html.twig' %}
{% block content %}
<div class="panel">
    <div class="flex justify-between mb-3">
        <h1>Nouvel Approvisionnement</h1>
        <h3>Taux: 1$ = {{ (app.session.get('tauxactif')) }} Fc</h3>
        <a class="border border-2 p-2 m2 text-white rounded bg-primary" href="{{ path('app_approvisionnement_index') }}">Voir la liste</a>

    </div>
    <div>
        <div>
            {{ form_start(form) }}

            <label for="">Produit</label>
            {{ form_widget(form.produit, {'attr': {'class': 'form-input'}}) }}
        </div>

        <div>
            <label for="">Quantité</label>
            {{ form_widget(form.qty, {'attr': {'class': 'form-input'}}) }}
        </div>
        <div>
            <label for="">Coût Total(Fc)</label>
            {{ form_widget(form.cout, {'attr': {'class': 'form-input', 'type':'number'}}) }}
        </div>
        <div>
            <br>
            <input type="submit" value="Enregistrer" class="btn btn-success">
        </div>
        {{ form_end(form) }}

        {#    {{ include('approvisionnement/_form.html.twig') }}#}

    </div>
</div>
{% endblock %}
